{% extends "::layout.html.twig" %}

{% block title %}
    {{ 'user'|trans }}
{% endblock %}

{% block body %}

    <h3>{{ 'user'|trans }}</h3>

    <form action="{{ path('_admin_user_save', { 'id': user.getId() }) }}" method="post" {{ form_enctype(form) }}>
        {% include 'opensixtUserAdminBundle:User:form.html.twig' %}
    </form>

{% endblock %}

{% block sidebar %}
    <ul>
        <li class="backhome"><a href="{{ path('_user_admin_home') }}">{{ 'admin_home'|trans }}</a></li>
        <li class="back"><a href="{{ path('_admin_userlist') }}">{{ 'user_list'|trans }}</a></li>
    </ul>

    <br/>
    {% include 'opensixtBikiniTranslateBundle:Translate:useradmin_menu.html.twig' %}
{% endblock %}
