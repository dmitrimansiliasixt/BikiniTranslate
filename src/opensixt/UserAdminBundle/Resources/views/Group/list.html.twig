{% extends "::layout.html.twig" %}

{% block title %}
    {{ 'groups'|trans }}
{% endblock %}

{% block body %}

    <h3>{{ 'groups'|trans }}</h3>

    <table class="list">
        <thead>
            <tr>
                <th style="width:150px">{{ 'group'|trans }}</th>
                <th style="width:350px">{{ 'description'|trans }}</th>
            </tr>
        </thead>
        <tbody>
        {% for item in pagination %}
            <tr>
                <td><a href="{{ path('_admin_group', {'id': item.id}) }}">{{ item.name }}</a></td>
                <td>{{ item.description }}</td>
            </tr>
        {% else %}
            <tr>
                <td colspan="2">{{ 'no_groups_found'|trans }}</td>
            </tr>
        {% endfor %}
        </tbody>
        <tfoot>
            <tr>
                <td colspan="3">
                    {{ pagination.render()|raw }}
                </td>
            </tr>
        </tfoot>
    </table>

{% endblock %}

{% block sidebar %}
    <ul>
        <li class="backhome"><a href="{{ path('_user_admin_home') }}">{{ 'admin_home'|trans }}</a></li>
        <li class="new"><a href="{{ path('_admin_group_create') }}">{{ 'new_group'|trans }}</a></li>
    </ul>

    <br/>
    {% include 'opensixtBikiniTranslateBundle:Translate:useradmin_menu.html.twig' %}
{% endblock %}
