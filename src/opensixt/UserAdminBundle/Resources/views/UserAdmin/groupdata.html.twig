{% extends "opensixtContentBundle::layout.html.twig" %}

{% block title %}
    {{ 'group'|trans }}
{% endblock %}

{% block body %}

    <h3>{{ 'group'|trans }}</h3>

    <form action="{{ path('_admin_group', {'id':id}) }}" method="post" {{ form_enctype(form) }}>
        {#{ form_widget(form.user) }#}
        <div>
            {{ form_label(form.name) }}
            {{ form_errors(form.name) }}
            {{ form_widget(form.name) }}
        </div>
        <div>
            {{ form_label(form.description) }}
            {{ form_errors(form.description) }}
            {{ form_widget(form.description) }}
        </div>
        {{ form_rest(form) }}
            <input type="submit" value="{{ 'submit'|trans }}"/>
    </form>

{% endblock %}

{% block sidebar %}
    <ul>
        <li class="backhome"><a href="{{ path('_user_admin_home') }}">{{ 'admin_home'|trans }}</a></li>
        <li class="back"><a href="{{ path('_admin_grouplist') }}">{{ 'group_list'|trans }}</a></li>
    </ul>

    <br/>
    {% include 'opensixtBikiniTranslateBundle:Translate:useradmin_menu.html.twig' %}
{% endblock %}
