{% extends "opensixtContentBundle::layout.html.twig" %}

{% block title %}
    BikiniTranslate UserAdmin
{% endblock %}

{% block body %}

    {% if is_granted('IS_AUTHENTICATED_FULLY') %}
        <li>
            <a href="{{ path('_user_admin_logout') }}">
                {{ 'logout'|trans }}
            </a>
        </li>
    {% endif %}
    <br />

    <li>
        <a href="{{ path('_admin_langlist') }}">
            {{ 'language_list'|trans }}
        </a>
    </li>

    <br /><br />

    <div class="message">{{ 'language'|trans }}</div>

    <br />

    <form action="{{ path('_admin_lang', {'id':id}) }}" method="post" {{ form_enctype(form) }}>
        <div>
            {{ form_label(form.locale) }}
            {{ form_errors(form.locale) }}
            {{ form_widget(form.locale) }}
        </div>
        <div>
            {{ form_label(form.description) }}
            {{ form_errors(form.description) }}
            {{ form_widget(form.description) }}
        </div>
        {{ form_rest(form) }}
            <input type="submit" value="{{ 'submit'|trans }}"/>
    </form>

{% endblock %}


