{% extends "opensixtContentBundle::layout.html.twig" %}

{% block title %}
    {{ 'translation_tool'|trans }}
{% endblock %}

{% block body %}

    <h3>{{ 'translation_tool'|trans }}</h3>

    <table class="list" style="border:1px;">
        <thead>
            <tr>
                <th style="width:200px">{{ 'source_lang'|trans }}</th>
                <th style="width:200px">{{ 'english'|trans }}</th>
                <th style="width:300px">{{ 'translation'|trans }}</th>
            </tr>
        </thead>
        <tbody>
        {% for item in texts %}
            <tr>
                <td>{{ item.resource.name }}<br/>{{ item.source }}</td>
                <td>TRANSLATE_ME</td>
                <td>{{ item.target }}</td>
            </tr>
        {% else %}
            <tr>
                <td colspan="2">{{ 'no_translation_found'|trans }}</td>
            </tr>
        {% endfor %}
        </tbody>
        <tfoot>
            <tr>
                <td colspan="2">
                    {% include 'opensixtBikiniTranslateBundle:Translate:paginationbar.html.twig' with {'target_route': '_translate_edittext', 'paginationbar' : paginationbar, 'locale': locale } %}
                </td>
            </tr>
        </tfoot>
    </table>


{% endblock %}


{% block sidebar %}
    <ul>
        <li class="backhome"><a href="{{ path('_translate_home') }}">{{ 'admin_home'|trans }}</a></li>

    </ul>
{% endblock %}
