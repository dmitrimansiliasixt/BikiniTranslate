{% extends "opensixtContentBundle::layout.html.twig" %}

{% block title %}
    {{ 'translation_tool'|trans }}
{% endblock %}

{% block body %}

    <h3>{{ 'translation_tool'|trans }}</h3>

    <form action="{{ path('_translate_searchstring') }}" method="post" {{ form_enctype(form) }}>

        {{ form_label(form.searchPhrase) }} {{ form_widget(form.searchPhrase) }}
        {{ form_label(form.resource) }} {{ form_widget(form.resource) }}
        {{ form_label(form.searchMode) }} {{ form_widget(form.searchMode) }}
        <input type="submit" value="{{ 'save_locale'|trans }}"/>
        {{ form_rest(form) }}
    </form>


    <table class="list">
        <thead>
            <tr>
                <th>{{ 'Results'|trans }}</th>
            </tr>
        </thead>
        <tbody>
        {% for item in searchResults %}
            <tr>
                <td>"{{ searchPhrase }}" ({{ item.resource.name }}): {{item.target}} ({{ item.locale.locale}})</td>

            </tr>
        {% else %}
            <tr>
                <td colspan="2">{{ 'no_translation_found'|trans }}</td>
            </tr>
        {% endfor %}
        </tbody>

    </table>

{% endblock %}

{% block sidebar %}
    <ul>
        <li class="backhome"><a href="{{ path('_translate_home') }}">{{ 'admin_home'|trans }}</a></li>
        <br/>
        {% include 'opensixtBikiniTranslateBundle:Translate:translationtool_menu.html.twig' %}
    </ul>
{% endblock %}
